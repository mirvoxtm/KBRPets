<script src="https://www.google.com/recaptcha/api.js" async defer></script>
@model KBRPETS.Models.PetFormViewModel

@{
    Layout = "_Layout";
}


<body>
<nav aria-label="breadcrumb" class="p-3 bg-custom-light">
    <div class="container">
        <ol class="breadcrumb m-0">
            <li class="breadcrumb-item fs-sm"><a href="@Url.Action("Index", "pets")">Home</a></li>
            <li class="breadcrumb-item fs-sm"><a href="@Url.Action("queroAdotar", "pets")">Quero Adotar</a></li>
                <li class="breadcrumb-item active fs-sm"><a href="@Url.Action("Index", "pets")">@Html.DisplayTextFor(model => model.Pet.Name)</a></li>
            <li class="breadcrumb-item active fs-sm" aria-current="page">Formulário de Solicitação</li>
        </ol>
    </div>
</nav>

<section class="bg-light py-5">
    <div class="container mb-5">
        <h2 class="m-0 bowlby-one text-uppercase h5 text-center">Solicitação de adoção</h2>

        <p class="text-center">Preencha aqui os dados da pessoa interessada em adotar o animal selecionado:</p>


        <form asp-action="Formulario" asp-controller="Pets" method="post" id="demo-form" class="bg-custom rounded p-4 mt-4 col-6 mx-auto row">
            <input type="hidden" asp-for="Solicitation.PetId"/>

            <div class="form-group py-2 col-12">
                <label for="Solicitation.Name" class="text-capitalize text-light">Seu nome:</label>
                <input type="text" asp-for="Solicitation.Name" class="form-control">
                <span asp-validation-for="Solicitation.Name" class="text-danger"></span>
            </div>

            <div class="form-group py-2 col-12">
                <label for="Solicitation.Pet" class="text-capitalize text-light">Nome <span class="text-lowercase">do</span> animal:</label>
                <input type="text" class="form-control" value="@Html.DisplayTextFor(model => model.Pet.Name)" disabled>
            </div>

            <div class="form-group py-2 col-6">
                <label for="Solicitation.Cpf" class="text-capitalize text-light">CPF:</label>
                <input type="text" asp-for="Solicitation.Cpf" class="form-control">
                <span asp-validation-for="Solicitation.Cpf" class="text-danger"></span>
            </div>

            <div class="form-group py-2 col-6">
                <label for="Solicitation.Email" class="text-capitalize text-light">E-mail:</label>
                <input type="email" asp-for="Solicitation.Email"  class="form-control">
                <span asp-validation-for="Solicitation.Email" class="text-danger"></span>
            </div>

            <div class="form-group py-2 col-6">
                <label for="Solicitation.Phone" class="text-capitalize text-light">Celular:</label>
                <input type="text" asp-for="Solicitation.Phone" class="form-control">
                <span asp-validation-for="Solicitation.Phone" class="text-danger"></span>
            </div>

            <div class="form-group py-2 col-6 mb-2">
                <label for="Solicitation.Date" class="text-capitalize text-light" placeholder="@DateTime.Now">Data <span class="text-lowercase">de</span> Nascimento:</label>
                    <input type="date" asp-for="Solicitation.BirthDate" min="@DateTime.Parse("1920-01-01")" class="form-control" value="DD/MM/AAAA">
                <span asp-validation-for="Solicitation.BirthDate" class="text-danger"></span>
            </div>
            
            <center>

                <!-- Captcha não funciona no momento. -->
                <div class="g-recaptcha" data-sitekey="6Ld0UvYoAAAAAI9nWZdFrdCm-ufb_prkEsOao2dx"></div>

            </center>
            <div class="col-12 d-flex justify-content-center mt-4">
                <button type="submit" class="btn btn-custom-2">Solicitar</button>
            </div>
        </form>
    </div>
</section>

<section class="bg-custom py-3" style="background-color: #FFECCE;">
    <div class="container">
        <div class="d-flex align-items-center justify-content-center gap-3">
            <div class="d-flex flex-column align-items-end">
                <h2 class="bowlby-one text-uppercase h4 m-0">Alguma dúvida?</h2>

                <a href="#" class="btn btn-custom">Entre em contato</a>
            </div>
            <img src="~/img/cartoon-cat-3.webp" alt="Gato" width="150">
        </div>
    </div>
</section>

<footer class="py-4">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <p class="m-0">
                Copyright © 2023. Todos os direitos reservados
            </p>

            <a href="https://www.kbrtec.com.br/" target="_blank" title="Acesse o site da KBR TEC">
                <img src="~/img/kbrtec.webp" alt="KBRTEC" width="100">
            </a>
        </div>
    </div>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
</body>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}